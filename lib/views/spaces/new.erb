<div id="content">
	<h1>List a space</h1>

	<form action="/spaces" method="post" enctype="multipart/form-data">
		<label for="name">
		  Name:
		  <input type="text" name="name"/>
		</label>

		<br><br>

		<label for="price">
		  Price:
		  <input type="text" name="price"/>
		</label>

		<br><br>

		<label for="description">
		  Description:
		  <textarea name="description" rows="4" cols="60"/></textarea>
		</label>

		<br><br>

	  <label for = "start_date">
		  Start Date:
		  <input type="date" name="start_date" min="<%=@min_date%>" max="<%=@max_date%>"/>
		</label>

		<label for = "end_date">
		  End Date:
		  <input type="date" name="end_date" min="<%=@min_date%>" max="<%=@max_date%>"/>
		</label>

    <label for="photo">
      Upload a photo:
      <input type="file" name="photo" accept="image/*">
    </label>

    <br><br>

		<input type="submit" value="List space">

	</form>
</div>
