<!DOCTYPE html>
<html>
  <head>
    <title>MakersBnB</title>
  </head>

  <body>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <%= error %>
      <% end %>
    <% end %>
    <% if @user %>
      <%= @user.email %>
      <form method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="sign out">
      </form>
    <% end %>
    <%= yield %>
  </body>
</html>
